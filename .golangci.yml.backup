# golangci-lint configuration file
# See https://golangci-lint.run/usage/configuration/ for full documentation

run:
  timeout: 5m
  tests: true
  skip-dirs:
    - vendor
    - test/fixtures
    - .git

output:
  format: colored-line-number
  print-issued-lines: true
  print-linter-name: true
  sort-results: true

linters:
  disable-all: true
  enable:
    - errcheck
    - gosimple
    - govet
    - ineffassign
    - staticcheck
    - typecheck
    - unused
    - gocyclo
    - gofmt
    - goimports
    - misspell
    - unconvert
    - gocritic
    - gosec
    - bodyclose
    - noctx

linters-settings:
  gocyclo:
    min-complexity: 25
  gosec:
    severity: medium
    confidence: medium
  gocritic:
    enabled-tags:
      - diagnostic
      - performance
      - style
    disabled-checks:
      - dupImport
      - ifElseChain
      - octalLiteral
      - whyNoLint
      - hugeParam
      - rangeValCopy
      - singleCaseSwitch

issues:
  exclude-files:
    - ".*\\.pb\\.go$"
    - ".*_mock\\.go$" 
    - ".*_gen\\.go$"
  exclude-dirs:
    - vendor
    - test/fixtures
    - .git
  exclude-rules:
    - path: _test\.go
      linters:
        - gosec
        - gocritic
    - path: cmd/antimoji/main\.go
      linters:
        - gochecknoinits
  max-issues-per-linter: 0
  max-same-issues: 0